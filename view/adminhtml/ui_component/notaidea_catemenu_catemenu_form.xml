<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">notaidea_catemenu_catemenu_form.notaidea_catemenu_catemenu_add_data_source</item>
            <item name="deps" xsi:type="string">notaidea_catemenu_catemenu_form.notaidea_catemenu_catemenu_add_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Add New Record</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <!-- namespace用当前的文件名-->
            <item name="namespace" xsi:type="string">notaidea_catemenu_catemenu_form</item>
        </item>

        <item name="spinner" xsi:type="string">general_information</item>

        <!-- 按钮 -->
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Notaidea\Catemenu\Block\Adminhtml\Catemenu\Edit\Button\Save</item>
            <item name="back" xsi:type="string">Notaidea\Catemenu\Block\Adminhtml\Catemenu\Edit\Button\Back</item>
        </item>

        <!-- 必须的配置，不然页面会一直在转圈圈。 -->
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <dataSource name="notaidea_catemenu_catemenu_add_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Notaidea\Catemenu\Model\PostDataProvider</argument>
            <!--
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            -->
            <!-- unique name for the grid -->
            <!-- name of the data source same as in argument/js_config/provider -->
            <argument name="name" xsi:type="string">notaidea_catemenu_catemenu_add_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">cat_id</argument>
            <argument name="requestFieldName" xsi:type="string">cat_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!-- 提交的URL -->
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>

        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="general_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">General Information</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <!--
        <field name="name" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label translate="true">Name</label>
            </settings>
        </field>
        -->
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <!--
                    <item name="source" xsi:type="string">Branddetails</item>
                    <item name="dataScope" xsi:type="string">title</item>
                    -->
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Url</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <!--
                    <item name="source" xsi:type="string">Branddetails</item>
                    <item name="dataScope" xsi:type="string">title</item>
                    -->
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>